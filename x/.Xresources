Xft.dpi: 96
Xft*antialias: true
Xft*hinting: true

! Set fonts
URxvt*font:xft:Ubuntu Mono derivative Powerline:size=9
URxvt*boldFont:xft:Ubuntu Mono derivative Powerline:bold:size=9
URxvt*italicFont:xft:Ubuntu Mono derivative Powerline:italic:size=9

! Scrolling options
URxvt*scrollBar: false
URxvt*scrollTtyOutput:  false
URxvt*secondaryScroll: True
URxvt*scrollTtyKeypress: True

! Open clickable URLs with google-chrome
URxvt*urlLauncher: google-chrome

! Extra Options
URxvt*cursorBlink: true
URxvt*saveLines: 65536
URxvt*termName: rxvt
URxvt*letterspace: -1
URxvt.iso14755: False

! Perl extensions
URxvt.perl-ext-common: default,clipboard,matcher

! Open and highlight urls with the left mouse button
URxvt.matcher.button: 1
URxvt.url-launcher: google-chrome
URxvt.colorUL: lightgreen
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

rofi.terminal: urxvtc

! Solarized colorscheme for Xresources/Xdefaults
URxvt*background:            #002b36
